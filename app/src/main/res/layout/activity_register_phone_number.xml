<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPhoneNumberActivity"
    android:padding="16dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_image_register_phonenumber"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_account_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_color="@color/teal_200"
        app:civ_border_width="2dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_user_number"
        android:layout_width="0dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_image_register_phonenumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="User name"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_edittext_register_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dinh trung phong 123"
            android:textColor="@color/black"
            android:background="@drawable/design_edt"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_phone_number"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_layout_user_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Phone number"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_edittext_register_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 1212121111"
            android:textColor="@color/black"
            android:background="@drawable/design_edt"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/register_button_phonenumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/design_button"
        android:text="Register"
        />

</androidx.constraintlayout.widget.ConstraintLayout>