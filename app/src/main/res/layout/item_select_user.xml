<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_item_new_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/teal_200"
        android:src="@drawable/ic_baseline_send_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/name_user_item_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/image_item_new_message"
        app:layout_constraintBottom_toBottomOf="@id/image_item_new_message"
        app:layout_constraintStart_toEndOf="@id/image_item_new_message"
        android:layout_marginStart="14dp"
        android:text="Dinh Trung Phong"/>


</androidx.constraintlayout.widget.ConstraintLayout>